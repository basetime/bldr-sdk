        "target": "ES2015",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist",
        "lib": ["es5", "es6", "dom", "dom.iterable"]
    },
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Recommended",
    "extends": "@tsconfig/recommended/tsconfig.json"
}
